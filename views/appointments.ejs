<!-- views/appointments.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Appointments - WeCare</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px 0;
        }

        .container {
            max-width: 900px;
            margin: 0 auto;
            padding: 20px;
        }

        .header {
            background: white;
            padding: 40px;
            border-radius: 15px;
            margin-bottom: 30px;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        .header h1 {
            color: #333;
            font-size: 32px;
            margin-bottom: 10px;
        }

        .header p {
            color: #666;
            font-size: 16px;
        }

        .appointments-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
            gap: 20px;
            margin-bottom: 40px;
        }

        .appointment-card {
            background: white;
            border-radius: 15px;
            padding: 20px;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            border-left: 5px solid #667eea;
        }

        .appointment-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
        }

        .appointment-card.completed {
            border-left-color: #28a745;
        }

        .appointment-card.cancelled {
            border-left-color: #dc3545;
            opacity: 0.7;
        }

        .nurse-section {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
        }

        .nurse-image {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            object-fit: cover;
            margin-right: 15px;
            background: #f0f0f0;
            border: 2px solid #667eea;
        }

        .nurse-info h3 {
            color: #333;
            font-size: 18px;
            margin: 0 0 5px 0;
        }

        .nurse-specialty {
            color: #666;
            font-size: 14px;
            margin: 0;
        }

        .appointment-details {
            background: #f9f9f9;
            padding: 15px;
            border-radius: 10px;
            margin: 15px 0;
        }

        .detail-row {
            display: flex;
            justify-content: space-between;
            margin: 10px 0;
            font-size: 14px;
        }

        .detail-label {
            color: #666;
            font-weight: 500;
        }

        .detail-value {
            color: #333;
            font-weight: 600;
        }

        .appointment-status {
            display: inline-block;
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: bold;
            margin: 10px 0;
        }

        .status-confirmed {
            background: #d4edda;
            color: #155724;
        }

        .status-completed {
            background: #d4edda;
            color: #155724;
        }

        .status-cancelled {
            background: #f8d7da;
            color: #721c24;
        }

        .status-pending {
            background: #fff3cd;
            color: #856404;
        }

        .appointment-actions {
            display: flex;
            gap: 10px;
            margin-top: 15px;
        }

        .btn {
            flex: 1;
            padding: 10px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-weight: 600;
            transition: all 0.3s ease;
            font-size: 14px;
        }

        .btn-cancel {
            background: #dc3545;
            color: white;
        }

        .btn-cancel:hover:not(:disabled) {
            background: #c82333;
        }

        .btn-reschedule {
            background: #667eea;
            color: white;
        }

        .btn-reschedule:hover:not(:disabled) {
            background: #5568d3;
        }

        .btn:disabled {
            opacity: 0.5;
            cursor: not-allowed;
        }

        .empty-state {
            text-align: center;
            padding: 60px 20px;
            background: white;
            border-radius: 15px;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
        }

        .empty-state-icon {
            font-size: 60px;
            margin-bottom: 20px;
        }

        .empty-state h2 {
            color: #333;
            margin-bottom: 10px;
        }

        .empty-state p {
            color: #666;
            margin-bottom: 30px;
        }

        .btn-primary {
            background: #667eea;
            color: white;
            padding: 12px 30px;
            text-decoration: none;
            border-radius: 8px;
            display: inline-block;
            transition: all 0.3s ease;
        }

        .btn-primary:hover {
            background: #5568d3;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
        }

        .stats {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
            gap: 15px;
            margin-top: 20px;
        }

        .stat-card {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 20px;
            border-radius: 10px;
            text-align: center;
        }

        .stat-number {
            font-size: 32px;
            font-weight: bold;
        }

        .stat-label {
            font-size: 14px;
            opacity: 0.9;
            margin-top: 5px;
        }

        @media (max-width: 768px) {
            .appointments-grid {
                grid-template-columns: 1fr;
            }

            .header {
                padding: 30px 20px;
            }

            .header h1 {
                font-size: 24px;
            }

            .stats {
                grid-template-columns: repeat(2, 1fr);
            }
        }
    </style>
</head>
<body>
    <%- include('partials/header', { page: 'appointments', showLogin: true }) %>

    <div class="container">
        <div class="header">
            <h1>üìÖ My Appointments</h1>
            <p>Manage and track all your healthcare appointments</p>
            <% 
            const confirmed = appointments.filter(a => a.status === 'confirmed').length;
            const completed = appointments.filter(a => a.status === 'completed').length;
            const cancelled = appointments.filter(a => a.status === 'cancelled').length;
            %>
            <div class="stats">
                <div class="stat-card">
                    <div class="stat-number"><%= confirmed %></div>
                    <div class="stat-label">Upcoming</div>
                </div>
                <div class="stat-card">
                    <div class="stat-number"><%= completed %></div>
                    <div class="stat-label">Completed</div>
                </div>
                <div class="stat-card">
                    <div class="stat-number"><%= cancelled %></div>
                    <div class="stat-label">Cancelled</div>
                </div>
                <div class="stat-card">
                    <div class="stat-number"><%= appointments.length %></div>
                    <div class="stat-label">Total</div>
                </div>
            </div>
        </div>

        <% if (appointments && appointments.length > 0) { %>
            <div class="appointments-grid">
                <% appointments.forEach((apt, index) => { %>
                    <% 
                    const appointmentDate = new Date(apt.appointmentDate);
                    const today = new Date();
                    today.setHours(0, 0, 0, 0);
                    const isPast = appointmentDate < today;
                    const statusClass = `appointment-card ${apt.status}`;
                    %>
                    <div class="<%= statusClass %>">
                        <div class="nurse-section">
                            <img src="<%= apt.nurseImage || 'https://via.placeholder.com/60?text=Nurse' %>" alt="<%= apt.nurseName %>" class="nurse-image">
                            <div class="nurse-info">
                                <h3><%= apt.nurseName %></h3>
                                <p class="nurse-specialty"><%= apt.specialization || 'Healthcare Professional' %></p>
                            </div>
                        </div>

                        <div class="appointment-status status-<%= apt.status %>">
                            <%= apt.status.charAt(0).toUpperCase() + apt.status.slice(1) %>
                        </div>

                        <div class="appointment-details">
                            <div class="detail-row">
                                <span class="detail-label">üìÖ Date:</span>
                                <span class="detail-value"><%= new Date(apt.appointmentDate).toLocaleDateString('en-US', { weekday: 'short', year: 'numeric', month: 'short', day: 'numeric' }) %></span>
                            </div>
                            <div class="detail-row">
                                <span class="detail-label">‚è∞ Time:</span>
                                <span class="detail-value"><%= apt.appointmentTime %></span>
                            </div>
                            <div class="detail-row">
                                <span class="detail-label">üíº Service:</span>
                                <span class="detail-value"><%= apt.serviceType %></span>
                            </div>
                            <div class="detail-row">
                                <span class="detail-label">üí∞ Price:</span>
                                <span class="detail-value">Rs <%= apt.servicePrice %></span>
                            </div>
                            <div class="detail-row">
                                <span class="detail-label">üí≥ Payment:</span>
                                <span class="detail-value"><%= apt.paymentMethod %></span>
                            </div>
                            <% if (apt.insuranceCoverage) { %>
                                <div class="detail-row">
                                    <span class="detail-label">üõ°Ô∏è Insurance:</span>
                                    <span class="detail-value">Covered</span>
                                </div>
                            <% } %>
                        </div>

                        <% if (apt.status !== 'cancelled') { %>
                            <div class="appointment-actions">
                                <% if (!isPast && apt.status === 'confirmed') { %>
                                    <button class="btn btn-reschedule">Reschedule</button>
                                    <button class="btn btn-cancel" onclick="cancelAppointmentFromList('<%= apt._id %>')">Cancel</button>
                                <% } %>
                            </div>
                        <% } %>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <div class="empty-state">
                <div class="empty-state-icon">üì≠</div>
                <h2>No Appointments Yet</h2>
                <p>You haven't booked any appointments. Start by browsing our available nurses and booking an appointment.</p>
                <a href="/nurses" class="btn-primary">Browse Nurses</a>
            </div>
        <% } %>
    </div>

    <script>
        function cancelAppointmentFromList(appointmentId) {
            if (confirm('Are you sure you want to cancel this appointment?')) {
                fetch(`/cancel-appointment/${appointmentId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                })
                .then(res => res.json())
                .then(data => {
                    if (data.ok) {
                        alert('‚úÖ Appointment cancelled successfully');
                        location.reload();
                    } else {
                        alert('‚ùå Error: ' + (data.error || 'Failed to cancel appointment'));
                    }
                })
                .catch(err => {
                    console.error('Error:', err);
                    alert('‚ùå Error cancelling appointment');
                });
            }
        }
    </script>

    <%- include('partials/footer') %>
</body>
</html>

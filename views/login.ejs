<!-- views/login.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>WeCare Login</title>
  <link rel="stylesheet" href="/css/login.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&family=Playfair+Display:wght@500;600&display=swap" rel="stylesheet" />
</head>
<body>
  <div class="container">
    <div class="login-box">
        <% if (typeof error !== 'undefined' && error) { %>
          <div class="error-message"><%= error %></div>
        <% } %>
        <% if (typeof success !== 'undefined' && success) { %>
          <div class="success-message"><%= success %></div>
        <% } %>
      <div class="top-bar">
        <div class="logo-area">
          <img src="/logo.png" alt="WeCare Logo" class="logo-img" />
          <h2></h2>
        </div>
        <button class="close-btn">
          <i class="fa-solid fa-xmark"></i>
        </button>
      </div>

      <h3>Welcome Back</h3>
      <p>Sign in to continue</p>

      <div class="role-buttons">
        <button type="button" data-role="patient" class="role-btn">Patient</button>
        <button type="button" data-role="nurse" class="role-btn">Nurse</button>
      </div>

      <form action="/login" method="POST">
        <input type="hidden" id="roleInput" name="role" value="<%= (typeof role !== 'undefined' && role) ? role : 'patient' %>">
        <div class="input-group">
          <label for="email">Email / Mobile Number</label>
          <input type="text" id="email" name="email" placeholder="Enter your email or mobile number" value="<%= (typeof email !== 'undefined' && email) ? email : '' %>" required />
        </div>

        <div class="input-group">
          <label for="password">Password</label>
          <input type="password" id="password" name="password" placeholder="Enter your password" required />
          <span class="password-icon"><i class="fas fa-eye"></i></span>
        </div>

        <button type="submit" class="sign-in-btn">Sign In</button>
      </form>

      <a href="/forgot-password" class="forgot-password">Forgot Password?</a>

      <div class="signup-link">
        <p>New Here? <a href="/signup">Sign Up</a></p>
      </div>
    </div>
  </div>
      <script src="/js/login.js"></script>
</body>
</html>
<!-- views/nurseprofile.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Nurse Profile</title>
  <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@200..700&family=Playwrite+AU+VIC+Guides&display=swap" rel="stylesheet" />
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    body {
      background: #eaf3ff;
      font-family: 'Segoe UI', sans-serif;
      min-height: 100vh;
      padding: 20px;
    }
    
    .profile-header {
      background: white;
      padding: 30px;
      border-radius: 10px;
      margin-bottom: 20px;
      box-shadow: 0 3px 6px rgba(0,0,0,0.05);
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    
    .profile-header h1 {
      color: #011941;
      font-size: 32px;
      margin: 0;
      font-family: 'Playwrite AU VIC Guides', serif;
    }
    
    .profile-header p {
      color: #666;
      font-size: 14px;
      margin: 5px 0 0 0;
    }
    
    .header-buttons {
      display: flex;
      gap: 10px;
    }
    
    .header-buttons a {
      padding: 10px 20px;
      background: #4a90e2;
      color: white;
      text-decoration: none;
      border-radius: 5px;
      font-weight: 500;
      transition: background 0.3s;
    }
    
    .header-buttons a:hover {
      background: #1a3d7c;
    }
    
    .container {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 20px;
      margin-bottom: 20px;
    }
    
    @media (max-width: 1200px) {
      .container {
        grid-template-columns: 1fr;
      }
    }
    
    .column {
      background: white;
      padding: 30px;
      border-radius: 10px;
      box-shadow: 0 3px 6px rgba(0,0,0,0.05);
      max-height: 75vh;
      overflow-y: auto;
    }
    
    .column h2 {
      color: #011941;
      font-size: 22px;
      margin-bottom: 20px;
      padding-bottom: 10px;
      border-bottom: 2px solid #4a90e2;
    }
    
    .form-group {
      margin-bottom: 20px;
    }
    
    .form-group label {
      display: block;
      color: #333;
      font-weight: 500;
      margin-bottom: 8px;
    }
    
    .form-group input,
    .form-group select,
    .form-group textarea {
      width: 100%;
      padding: 10px;
      border: 1px solid #ddd;
      border-radius: 5px;
      font-family: 'Segoe UI', sans-serif;
      font-size: 14px;
    }
    
    .form-group input:focus,
    .form-group select:focus,
    .form-group textarea:focus {
      outline: none;
      border-color: #4a90e2;
      box-shadow: 0 0 8px rgba(74, 144, 226, 0.3);
    }
    
    .form-group small {
      display: block;
      color: #999;
      margin-top: 5px;
      font-size: 12px;
    }
    
    .photo-preview {
      text-align: center;
      margin-bottom: 20px;
      padding: 20px;
      background: #f8f9fa;
      border-radius: 5px;
    }
    
    .photo-preview img {
      width: 120px;
      height: 120px;
      border-radius: 50%;
      object-fit: cover;
      border: 3px solid #4a90e2;
    }
    
    .section-title {
      color: #4a90e2;
      font-size: 16px;
      font-weight: 600;
      margin-top: 20px;
      margin-bottom: 15px;
      padding-top: 15px;
      border-top: 1px solid #eee;
    }
    
    .error-message {
      background-color: #f8d7da;
      color: #721c24;
      padding: 12px;
      border-radius: 5px;
      margin-bottom: 15px;
      border: 1px solid #f5c6cb;
    }
    
    .success-message {
      background-color: #d4edda;
      color: #155724;
      padding: 12px;
      border-radius: 5px;
      margin-bottom: 15px;
      border: 1px solid #c3e6cb;
    }
    
    .submit-btn {
      width: 100%;
      padding: 12px;
      background: #4a90e2;
      color: white;
      border: none;
      border-radius: 5px;
      font-size: 16px;
      font-weight: 600;
      cursor: pointer;
      transition: background 0.3s;
      margin-top: 20px;
    }
    
    .submit-btn:hover {
      background: #1a3d7c;
    }
  </style>
</head>
<body>
  <div class="profile-header">
    <div>
      <h1>My Profile</h1>
      <p>Update your professional details and documents</p>
    </div>
    <div class="header-buttons">
      <a href="/nurseportal">‚Üê Dashboard</a>
      <a href="/logout">Logout</a>
    </div>
  </div>

  <% if (typeof error !== 'undefined' && error) { %>
    <div style="background: white; padding: 20px; border-radius: 10px; margin-bottom: 20px; box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);">
      <div class="error-message"><%= error %></div>
    </div>
  <% } %>
  <% if (typeof success !== 'undefined' && success) { %>
    <div style="background: white; padding: 20px; border-radius: 10px; margin-bottom: 20px; box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);">
      <div class="success-message"><%= success %></div>
    </div>
  <% } %>

  <form action="/nurseprofile" method="POST" enctype="multipart/form-data">
    <div class="container">
      <!-- LEFT COLUMN: PERSONAL & BASIC INFO -->
      <div class="column">
        <h2>üë§ Personal Information</h2>
        
        <!-- Profile Photo -->
        <div class="photo-preview">
          <% if (user.profile && user.profile.photo) { %>
            <img src="<%= user.profile.photo %>" alt="Profile photo" />
          <% } else { %>
            <div style="width: 120px; height: 120px; background: #e0e0e0; border-radius: 50%; margin: 0 auto; display: flex; align-items: center; justify-content: center; color: #999;">No Photo</div>
          <% } %>
        </div>
        
        <div class="form-group">
          <label for="photo">Upload Profile Photo</label>
          <input type="file" id="photo" name="photo" accept="image/*" />
          <small>Upload a square image for best results (PNG, JPG)</small>
        </div>
        
        <div class="form-group">
          <label for="name">Full Name</label>
          <input type="text" id="name" name="name" value="<%= user.name %>" required />
        </div>

        <div class="form-group">
          <label for="email">Email Address</label>
          <input type="email" id="email" name="email" value="<%= user.email %>" readonly />
        </div>

        <div class="form-group">
          <label for="phone">Phone Number</label>
          <input type="text" id="phone" name="phone" value="<%= user.profile && user.profile.phone ? user.profile.phone : '' %>" />
        </div>

        <div class="form-group">
          <label for="dob">Date of Birth</label>
          <input type="date" id="dob" name="dob" value="<%= user.profile && user.profile.dob ? user.profile.dob.toISOString().slice(0,10) : '' %>" />
        </div>

        <div class="form-group">
          <label for="gender">Gender</label>
          <select id="gender" name="gender">
            <option value="">Select Gender</option>
            <option value="male" <%= user.profile && user.profile.gender === 'male' ? 'selected' : '' %>>Male</option>
            <option value="female" <%= user.profile && user.profile.gender === 'female' ? 'selected' : '' %>>Female</option>
            <option value="other" <%= user.profile && user.profile.gender === 'other' ? 'selected' : '' %>>Other</option>
          </select>
        </div>

        <div class="section-title">üìç Address Information</div>

        <div class="form-group">
          <label for="address">Street Address</label>
          <input type="text" id="address" name="address" value="<%= user.profile && user.profile.address ? user.profile.address : '' %>" />
        </div>

        <div class="form-group">
          <label for="city">City</label>
          <input type="text" id="city" name="city" value="<%= user.profile && user.profile.city ? user.profile.city : '' %>" />
        </div>

        <div class="form-group">
          <label for="state">State</label>
          <input type="text" id="state" name="state" value="<%= user.profile && user.profile.state ? user.profile.state : '' %>" />
        </div>

        <div class="form-group">
          <label for="zip">ZIP Code</label>
          <input type="text" id="zip" name="zip" value="<%= user.profile && user.profile.zip ? user.profile.zip : '' %>" />
        </div>

        <div class="form-group">
          <label for="emergencyContact">Emergency Contact</label>
          <input type="text" id="emergencyContact" name="emergencyContact" value="<%= user.profile && user.profile.emergencyContact ? user.profile.emergencyContact : '' %>" />
        </div>
      </div>

      <!-- RIGHT COLUMN: PROFESSIONAL & DOCUMENTS -->
      <div class="column">
        <h2>üè• Professional Details</h2>
        
        <div class="form-group">
          <label for="licenseNumber">License Number *</label>
          <input type="text" id="licenseNumber" name="licenseNumber" value="<%= user.profile && user.profile.licenseNumber ? user.profile.licenseNumber : '' %>" required />
          <small>Your nursing license/registration number</small>
        </div>

        <div class="form-group">
          <label for="specialization">Specialization</label>
          <input type="text" id="specialization" name="specialization" placeholder="e.g., General Nursing, ICU, Pediatrics, Cardiology" value="<%= user.profile && user.profile.specialization ? user.profile.specialization : '' %>" />
        </div>

        <div class="form-group">
          <label for="experience">Years of Experience</label>
          <input type="text" id="experience" name="experience" placeholder="e.g., 5 years" value="<%= user.profile && user.profile.experience ? user.profile.experience : '' %>" />
        </div>

        <div class="form-group">
          <label for="certifications">Certifications</label>
          <textarea id="certifications" name="certifications" rows="4" placeholder="List all certifications&#10;e.g., BScN, RN, ICU Certification, ACLS"><%= user.profile && user.profile.certifications ? user.profile.certifications : '' %></textarea>
        </div>

        <div class="form-group">
          <label for="hourlyRate">Hourly Rate (Rs.)</label>
          <input type="text" id="hourlyRate" name="hourlyRate" placeholder="e.g., 500" value="<%= user.profile && user.profile.hourlyRate ? user.profile.hourlyRate : '' %>" />
        </div>

        <div class="section-title">üìÑ Documents & Verification</div>

        <div class="form-group">
          <label for="licenseDocument">License Certificate</label>
          <% if (user.profile && user.profile.licenseDocument) { %>
            <div style="margin-bottom:10px; padding: 10px; background: #e8f5e9; border-radius: 5px;">
              <a href="<%= user.profile.licenseDocument %>" target="_blank" style="color: #2e7d32; text-decoration: underline; font-weight: 500;">‚úì View Current Document</a>
            </div>
          <% } %>
          <input type="file" id="licenseDocument" name="licenseDocument" accept=".pdf,.jpg,.jpeg,.png" />
          <small>Upload PDF, JPG, or PNG (Max 5MB)</small>
        </div>

        <div class="form-group">
          <label for="certificateDocument">Professional Certificates</label>
          <% if (user.profile && user.profile.certificateDocument) { %>
            <div style="margin-bottom:10px; padding: 10px; background: #e8f5e9; border-radius: 5px;">
              <a href="<%= user.profile.certificateDocument %>" target="_blank" style="color: #2e7d32; text-decoration: underline; font-weight: 500;">‚úì View Current Document</a>
            </div>
          <% } %>
          <input type="file" id="certificateDocument" name="certificateDocument" accept=".pdf,.jpg,.jpeg,.png" />
          <small>Upload certifications and qualifications (Max 5MB)</small>
        </div>

        <div class="form-group">
          <label for="notes">Additional Information</label>
          <textarea id="notes" name="notes" rows="4" placeholder="Add any additional information about your expertise or specializations"><%= user.profile && user.profile.notes ? user.profile.notes : '' %></textarea>
        </div>
      </div>
    </div>

    <div style="background: white; padding: 30px; border-radius: 10px; box-shadow: 0 3px 6px rgba(0,0,0,0.05);">
      <button type="submit" class="submit-btn">üíæ Save All Changes</button>
    </div>
  </form>

</body>
</html>
<!-- views/nurseprofile.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Nurse Profile</title>
  <link rel="stylesheet" href="/css/login.css" />
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet" />
</head>
<body>
  <%- include('partials/header', { page: 'nurseprofile', showLogin: false }) %>

  <div class="container">
    <div class="login-box" style="max-width: 600px;">
      <h3>My Profile</h3>
      <p style="text-align: center; color: #666; margin-bottom: 20px;">Update your professional details and documents</p>
      
      <% if (typeof error !== 'undefined' && error) { %>
        <div class="error-message"><%= error %></div>
      <% } %>
      <% if (typeof success !== 'undefined' && success) { %>
        <div class="success-message"><%= success %></div>
      <% } %>

      <form action="/nurseprofile" method="POST" enctype="multipart/form-data">
        <!-- Profile Photo Section -->
        <div class="input-group">
          <label for="photo">Profile Photo</label>
          <% if (user.profile && user.profile.photo) { %>
            <div style="margin-bottom:8px;">
              <img src="<%= user.profile.photo %>" alt="Profile photo" style="width:80px;height:80px;border-radius:50%;object-fit:cover;" />
            </div>
          <% } %>
          <input type="file" id="photo" name="photo" accept="image/*" />
          <small>Optional. Upload a square image for best results.</small>
        </div>

        <!-- Basic Information -->
        <fieldset style="border: 1px solid #ddd; padding: 15px; border-radius: 5px; margin: 15px 0;">
          <legend style="padding: 0 10px; font-weight: 600; color: #1a3d7c;">Basic Information</legend>
          
          <div class="input-group">
            <label for="name">Full name</label>
            <input type="text" id="name" name="name" value="<%= user.name %>" required />
          </div>

          <div class="input-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" value="<%= user.email %>" readonly />
          </div>

          <div class="input-group">
            <label for="phone">Phone</label>
            <input type="text" id="phone" name="phone" value="<%= user.profile && user.profile.phone ? user.profile.phone : '' %>" />
          </div>

          <div class="input-group">
            <label for="dob">Date of birth</label>
            <input type="date" id="dob" name="dob" value="<%= user.profile && user.profile.dob ? user.profile.dob.toISOString().slice(0,10) : '' %>" />
          </div>

          <div class="input-group">
            <label for="gender">Gender</label>
            <select id="gender" name="gender">
              <option value="">Choose...</option>
              <option value="male" <%= user.profile && user.profile.gender === 'male' ? 'selected' : '' %>>Male</option>
              <option value="female" <%= user.profile && user.profile.gender === 'female' ? 'selected' : '' %>>Female</option>
              <option value="other" <%= user.profile && user.profile.gender === 'other' ? 'selected' : '' %>>Other</option>
            </select>
          </div>
        </fieldset>

        <!-- Address Information -->
        <fieldset style="border: 1px solid #ddd; padding: 15px; border-radius: 5px; margin: 15px 0;">
          <legend style="padding: 0 10px; font-weight: 600; color: #1a3d7c;">Address</legend>
          
          <div class="input-group">
            <label for="address">Street Address</label>
            <input type="text" id="address" name="address" value="<%= user.profile && user.profile.address ? user.profile.address : '' %>" />
          </div>

          <div class="input-group">
            <label for="city">City</label>
            <input type="text" id="city" name="city" value="<%= user.profile && user.profile.city ? user.profile.city : '' %>" />
          </div>

          <div class="input-group">
            <label for="state">State</label>
            <input type="text" id="state" name="state" value="<%= user.profile && user.profile.state ? user.profile.state : '' %>" />
          </div>

          <div class="input-group">
            <label for="zip">ZIP Code</label>
            <input type="text" id="zip" name="zip" value="<%= user.profile && user.profile.zip ? user.profile.zip : '' %>" />
          </div>

          <div class="input-group">
            <label for="emergencyContact">Emergency Contact</label>
            <input type="text" id="emergencyContact" name="emergencyContact" value="<%= user.profile && user.profile.emergencyContact ? user.profile.emergencyContact : '' %>" />
          </div>
        </fieldset>

        <!-- Professional Details -->
        <fieldset style="border: 1px solid #ddd; padding: 15px; border-radius: 5px; margin: 15px 0;">
          <legend style="padding: 0 10px; font-weight: 600; color: #1a3d7c;">Professional Details</legend>
          
          <div class="input-group">
            <label for="licenseNumber">License Number</label>
            <input type="text" id="licenseNumber" name="licenseNumber" value="<%= user.profile && user.profile.licenseNumber ? user.profile.licenseNumber : '' %>" required />
          </div>

          <div class="input-group">
            <label for="specialization">Specialization</label>
            <input type="text" id="specialization" name="specialization" placeholder="e.g., General Nursing, Critical Care, Pediatrics" value="<%= user.profile && user.profile.specialization ? user.profile.specialization : '' %>" />
          </div>

          <div class="input-group">
            <label for="experience">Years of Experience</label>
            <input type="text" id="experience" name="experience" placeholder="e.g., 5 years" value="<%= user.profile && user.profile.experience ? user.profile.experience : '' %>" />
          </div>

          <div class="input-group">
            <label for="certifications">Certifications</label>
            <textarea id="certifications" name="certifications" placeholder="List all certifications (e.g., BScN, RN, ICU Certification)"><%= user.profile && user.profile.certifications ? user.profile.certifications : '' %></textarea>
          </div>

          <div class="input-group">
            <label for="hourlyRate">Hourly Rate (Rs.)</label>
            <input type="text" id="hourlyRate" name="hourlyRate" placeholder="e.g., 500" value="<%= user.profile && user.profile.hourlyRate ? user.profile.hourlyRate : '' %>" />
          </div>
        </fieldset>

        <!-- Documents Upload -->
        <fieldset style="border: 1px solid #ddd; padding: 15px; border-radius: 5px; margin: 15px 0;">
          <legend style="padding: 0 10px; font-weight: 600; color: #1a3d7c;">Documents & Verification</legend>
          
          <div class="input-group">
            <label for="licenseDocument">License Certificate (PDF, JPG, PNG)</label>
            <% if (user.profile && user.profile.licenseDocument) { %>
              <div style="margin-bottom:8px;">
                <a href="<%= user.profile.licenseDocument %>" target="_blank" style="color: #1a73e8; text-decoration: underline;">View Current Document</a>
              </div>
            <% } %>
            <input type="file" id="licenseDocument" name="licenseDocument" accept=".pdf,.jpg,.jpeg,.png" />
            <small>Upload your nursing license/registration certificate</small>
          </div>

          <div class="input-group">
            <label for="certificateDocument">Professional Certificates (PDF, JPG, PNG)</label>
            <% if (user.profile && user.profile.certificateDocument) { %>
              <div style="margin-bottom:8px;">
                <a href="<%= user.profile.certificateDocument %>" target="_blank" style="color: #1a73e8; text-decoration: underline;">View Current Document</a>
              </div>
            <% } %>
            <input type="file" id="certificateDocument" name="certificateDocument" accept=".pdf,.jpg,.jpeg,.png" />
            <small>Upload certifications, degrees, or professional qualifications</small>
          </div>
        </fieldset>

        <!-- Additional Notes -->
        <div class="input-group">
          <label for="notes">Additional Notes / Medical Specialization</label>
          <textarea id="notes" name="notes" style="height: 100px;" placeholder="Add any additional information about your expertise or specializations"><%= user.profile && user.profile.notes ? user.profile.notes : '' %></textarea>
        </div>

        <button type="submit" class="sign-in-btn" style="width: 100%; margin-top: 20px;">Save Profile</button>
      </form>

      <div style="margin-top:12px;text-align:center;">
        <a href="/nurseportal">Back to Dashboard</a> | <a href="/logout">Logout</a>
      </div>
    </div>
  </div>

  <%- include('partials/footer') %>
  </body>
    <script src="/js/profile.js"></script>
  </html>
</html>

<!-- views/signup.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>WeCare Signup</title>
  <link rel="stylesheet" href="/css/login.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&family=Playfair+Display:wght@500;600&display=swap" rel="stylesheet" />
</head>
<body>
  <div class="container">
    <div class="login-box">
      <% if (typeof error !== 'undefined' && error) { %>
        <div class="error-message"><%= error %></div>
      <% } %>
      <div class="top-bar">
        <div class="logo-area">
          <img src="/logo.png" alt="WeCare Logo" class="logo-img" />
          <h2></h2>
        </div>
        <button class="close-btn">
          <i class="fa-solid fa-xmark"></i>
        </button>
      </div>

      <h3>Create an account</h3>
      <p>Choose your role and enter details</p>

      <div class="role-buttons">
        <button type="button" data-role="patient" class="role-btn">Patient</button>
        <button type="button" data-role="nurse" class="role-btn">Nurse</button>
      </div>

      <form action="/signup" method="POST">
        <input type="hidden" id="roleInput" name="role" value="<%= (form && form.role) ? form.role : 'patient' %>">

        <div class="input-group">
          <label for="name">Full name</label>
          <input type="text" id="name" name="name" placeholder="Your full name" value="<%= (form && form.name) ? form.name : '' %>" required />
        </div>

        <div class="input-group">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" placeholder="Enter your email" value="<%= (form && form.email) ? form.email : '' %>" required />
        </div>

        <div class="input-group">
          <label for="password">Password</label>
          <input type="password" id="password" name="password" placeholder="Create a password" required />
        </div>

        <div class="input-group">
          <label for="confirm">Confirm Password</label>
          <input type="password" id="confirm" name="confirm" placeholder="Confirm your password" required />
        </div>

        <button type="submit" class="sign-in-btn">Sign Up</button>
      </form>

      <div class="signup-link">
        <p>Already have an account? <a href="/login">Sign In</a></p>
      </div>
    </div>
  </div>
  <script src="/js/signup.js"></script>
</body>
</html>

<!-- views/profile.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>My Profile</title>
  <link rel="stylesheet" href="/css/login.css" />
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet" />
</head>
<body>
  <div class="container">
    <div class="login-box">
      <h3>My Profile</h3>
      <% if (typeof error !== 'undefined' && error) { %>
        <div class="error-message"><%= error %></div>
      <% } %>
      <% if (typeof success !== 'undefined' && success) { %>
        <div class="success-message"><%= success %></div>
      <% } %>

      <form action="/profile" method="POST">
        <div class="input-group">
          <label for="name">Full name</label>
          <input type="text" id="name" name="name" value="<%= user.name %>" required />
        </div>

        <div class="input-group">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" value="<%= user.email %>" readonly />
        </div>

        <div class="input-group">
          <label for="phone">Phone</label>
          <input type="text" id="phone" name="phone" value="<%= user.profile && user.profile.phone ? user.profile.phone : '' %>" />
        </div>

        <div class="input-group">
          <label for="dob">Date of birth</label>
          <input type="date" id="dob" name="dob" value="<%= user.profile && user.profile.dob ? user.profile.dob.toISOString().slice(0,10) : '' %>" />
        </div>

        <div class="input-group">
          <label for="gender">Gender</label>
          <select id="gender" name="gender">
            <option value="">Choose...</option>
            <option value="male" <%= user.profile && user.profile.gender === 'male' ? 'selected' : '' %>>Male</option>
            <option value="female" <%= user.profile && user.profile.gender === 'female' ? 'selected' : '' %>>Female</option>
            <option value="other" <%= user.profile && user.profile.gender === 'other' ? 'selected' : '' %>>Other</option>
          </select>
        </div>

        <div class="input-group">
          <label for="address">Address</label>
          <input type="text" id="address" name="address" value="<%= user.profile && user.profile.address ? user.profile.address : '' %>" />
        </div>

        <div class="input-group">
          <label for="city">City</label>
          <input type="text" id="city" name="city" value="<%= user.profile && user.profile.city ? user.profile.city : '' %>" />
        </div>

        <div class="input-group">
          <label for="state">State</label>
          <input type="text" id="state" name="state" value="<%= user.profile && user.profile.state ? user.profile.state : '' %>" />
        </div>

        <div class="input-group">
          <label for="zip">ZIP</label>
          <input type="text" id="zip" name="zip" value="<%= user.profile && user.profile.zip ? user.profile.zip : '' %>" />
        </div>

        <div class="input-group">
          <label for="emergencyContact">Emergency Contact</label>
          <input type="text" id="emergencyContact" name="emergencyContact" value="<%= user.profile && user.profile.emergencyContact ? user.profile.emergencyContact : '' %>" />
        </div>

        <div class="input-group">
          <label for="notes">Notes / Medical Info</label>
          <textarea id="notes" name="notes"><%= user.profile && user.profile.notes ? user.profile.notes : '' %></textarea>
        </div>

        <button type="submit" class="sign-in-btn">Save Profile</button>
      </form>

      <div style="margin-top:12px;text-align:center;">
        <a href="/logout">Logout</a>
      </div>
    </div>
  </div>
  </body>
    <script src="/js/profile.js"></script>
  </html>
</html>
